<?xml version="1.0" encoding="UTF-8"?>

<component name="org.athento.nuxeo.digifactin.doctype-contrib"
	version="1.0.0">

	<require>org.nuxeo.runtime.started</require>

	<extension target="org.nuxeo.ecm.core.schema.TypeService"
		point="doctype">

		<doctype name="ExtendedConfig" extends="File" append="true">
			<schema name="digiextendedconfig" />
		</doctype>

	</extension>

	<extension target="org.nuxeo.ecm.platform.types.TypeService"
		point="types">

		<type id="ExtendedConfig" append="true">
			<layouts mode="create" append="true">
				<layout>layout@formlayout-digifactin-extendedconfig</layout>
			</layouts>
			<layouts mode="edit" append="true">
				<layout>layout@formlayout-digifactin-extendedconfig</layout>
			</layouts>
			<layouts mode="view" append="true">
				<layout>layout@formlayout-digifactin-extendedconfig</layout>
			</layouts>
		</type>

	</extension>

</component>